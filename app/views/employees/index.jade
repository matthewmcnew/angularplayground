ol.breadcrumb
  li 
    a(ui-sref='companies.index') Companies
  li 
    a(ui-sref="companies.show({companyId: company.id})") {{ company.name }}
  li.active Employees
hr
.row
  .col-md-12
    a.btn.btn-success.pull-right(ui-sref='companies.employees.new({companyId: company.id})') New Employee
hr
.row
  .col-md-12
    .panel.panel-info
      .panel-heading
        h3.panel-title Employees
      .panel-body
        table.table.table-striped
          thead
            tr
              th First Name
              th Last Name
              th Email
          tbody
            tr(ng-repeat="employee in company.employees")
              td {{ employee.first_name }}
              td {{ employee.last_name }}
              td {{ employee.email }}


