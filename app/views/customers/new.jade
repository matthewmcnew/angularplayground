    div(ng-if="field.type == 'string' &&  field.options.length <= 5")
      label {{ field.label }}
      select.form-control(type='text', ng-model='customer.billing_address[field.name]', required)
        option(ng-repeat= "option in field.options") {{ option }}
    div(ng-if="field.type == 'boolean'")
      .checkbox
        label
          input(type='checkbox',ng-model="customer.billing_address[field.name]")
          {{ field.label }}

  h3
    | Shipping Address
  .form-group(ng-repeat="field in shippingAddressFields")
