ol.breadcrumb
  li 
    a(ui-sref='inside') Home
  li.active Companies
hr
.row
  .col-md-6.col-md-offset-2
    section.tab(ng-controller="TimesheetsCtrl as timesheet")
      ul.nav.nav-pills.well.center-box
        li(ng-class="{ active: timesheet.isSelected(1) }").text-center
          a(ng-click="timesheet.selectTab(1)") Mon
          span
            {{ dt| date:'MM/dd' }}
        li(ng-class="{ active: timesheet.isSelected(2) }").text-center
          a(ng-click="timesheet.selectTab(2)") Tue
          span 10/21
            
        li(ng-class="{ active: timesheet.isSelected(3) }").text-center
          a(ng-click="timesheet.selectTab(3)") Wed
          span 10/22

        li(ng-class="{ active: timesheet.isSelected(4) }").text-center
          a(ng-click="timesheet.selectTab(4)") Thu
          span 10/23

        li(ng-class="{ active: timesheet.isSelected(5) }").text-center
          a(ng-click="timesheet.selectTab(5)") Fri
          span 10/24

        li.pull-right
          h2 Total: 
            span {{ timesheet.total }}

      table.table.table-hover
        tbody
          tr(ng-show="timesheet.isSelected(1)", ng-repeat="line_item in timesheet.line_items")
            td 
              {{line_item.product}}
            td.col-lg 
              {{line_item.description}}
            td.pull-right.col-xs-1
              {{line_item.hours}}
            td.pull-right.col-xs-2
              input(type="checkbox", checked) 
              label Billable?
            td.col-xs-1
              a.btn.btn-default Save
            td.col-xs-1
              i.fa.fa-trash
          form
            tr(ng-show="timesheet.isSelected(1)")
              td.col-xs-2
                input.form-control(placeholder="Project") 
              td.col-lg 
                input.form-control(placeholder="Description of Work for row")
              td.pull-right.col-xs-2
                input.form-control(placeholder="Hours")
              td.pull-right.col-xs-1
                input(type="checkbox", checked) 
                label Billable?
              td.col-xs-1
