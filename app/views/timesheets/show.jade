section(ng-init="createLineItems()")
ol.breadcrumb
  li 
    a(ui-sref='inside') Home
  li.active Companies
hr
.row
  .col-md-12
    section.tab(ng-controller="TimesheetsCtrl")
      ul.nav.nav-pills.well.center-box
        li(ng-repeat="date in timesheet.dates", ng-class="{ active: tab===$index }").text-center
          a(ng-click="selectTab($index)") {{date.day}}
          span
            {{date.date}}/{{date.month}}

        li.pull-right
          h2 Total: 
            span {{ timesheet.total }}

      table.table.table-hover
        tbody
          tr(ng-repeat="date in timesheet.dates", ng-show="tab===$index")
            td 
              {{line_item.product}}
            td.col-lg 
              {{line_item.description}}
            td.pull-right.col-xs-1
              {{line_item.hours}}
            td.pull-right.col-xs-2
              input(type="checkbox", checked) 
              label Billable?
            td.col-xs-1
              a.btn.btn-default Save
            td.col-xs-1
              i.fa.fa-trash
          form
            tr
              td.col-xs-2
                input.form-control(placeholder="Project", ng-model='item_project') 
              td.col-lg 
                input.form-control(placeholder="Description of Work for row", ng-model='item_description')
              td.pull-right.col-xs-2
                input.form-control(placeholder="Hours", ng-model='item_hours')
              td.pull-right.col-xs-1
                input(type="checkbox", checked) 
                label Billable?
              td.col-xs-1
                a.btn.btn-default(ng-click="timesheet.addLineItem()") Save
              td.col-xs-1
                i.fa.fa-trash

      .row
        .col-lg-3.pull-right 
          h3 Total: {{ timesheet.total }}

